@model IEnumerable<TeamFyraSidor.Models.TableData.Info>

<!DOCTYPE html>
<html>
<head>
    <title>Info Table</title>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Weather History Table</h1>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Row Key</th>
                    <th>Partition Key</th>
                    <th>City</th>
                    <th>Temperature (°C)</th>
                    <th>Humidity (%)</th>
                    <th>Wind Speed (m/s)</th>
                    <th>Description</th>
                    <th>Timestamp</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RowKey</td>
                            <td>@item.PartitionKey</td>
                            <td>@item.Name</td>
                            <td>@item.Temp</td>
                            <td>@item.Humidity</td>
                            <td>@item.WindSpeed</td>
                            <td>@item.Description</td>
                            <td>@item.Timestamp?.ToString("g")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center">No data available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>



