@model TeamFyraSidor.Models.VM.EditRoleVM
@{
    ViewData["Title"] = "Delete Role";
}

<h1 class="striped-background">Delete Role</h1>

<br />
<partial name="_StatusMessage" model="@TempData["StatusMessage"]" />

<div class="container-fluid">
    <div class="row ">
        <form asp-action="DeleteRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group box-shadow">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" readonly class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group box-shadow">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" readonly class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <h3>
                Are you sure to delete the role?
            </h3>


            <div class="row">
                <div class="form-group box-shadow col-md-6 mt-md-2">
                    <input type="submit" value="Delete" class="btn btn-primary w-100" />
                </div>

                <div class="form-group box-shadow col-md-6 mt-md-2">
                    <a asp-action="ListRoleName" class="btn btn-secondary w-100">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}