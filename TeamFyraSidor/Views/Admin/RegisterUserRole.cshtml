@using Newtonsoft.Json
@model TeamFyraSidor.Models.VM.CreateUserRoleVM

@{
    ViewData["Title"] = "Register Employee";
    var listRoleName = JsonConvert.DeserializeObject<List<string>>(TempData["listRoleName"] as string);
}

<h1 class="striped-background">Register an new user</h1>



<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <form asp-action="RegisterUserRole" method="post">
            <div class="form-floating mb-3">
                <input asp-for="FirstName" class="form-control" aria-required="true" required />
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" aria-required="true" required />
                <label asp-for="LastName"></label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DOB" class="form-control" aria-required="true" />
                <label asp-for="DOB"></label>
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="PhoneNumber" class="form-control" aria-required="true" />
                <label asp-for="PhoneNumber"></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="Email" asp-for="Email" class="form-control" aria-required="true" required />
                <label  asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" aria-required="true" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" class="form-control" aria-required="true" />
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="RoleName" class="mb-2">Choose one role:</label>                              
                <select asp-for="RoleName" class="form-select form-select-sm" aria-label=".form-select-sm example" required>
                    <option value="">Open this select menu</option>
                    @foreach(var item in listRoleName)
                    {
                        <option value=@item>@item</option>
                    }
                </select>
            </div>


            <div class="row">
                <div class="form-group box-shadow col-md-6 mt-md-2">
                    <input type="submit" value="Register" class="btn btn-primary w-100" />
                </div>

                <div class="form-group box-shadow col-md-6 mt-md-2">
                    <a asp-action="ListEmployeeRole" class="btn btn-secondary w-100">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
