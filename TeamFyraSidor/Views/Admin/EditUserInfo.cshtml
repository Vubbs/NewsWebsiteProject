@using Newtonsoft.Json
@model TeamFyraSidor.Models.VM.EditUserVM

@{
    ViewData["Title"] = "EditEmployee";
}

<h3>Edit User</h3>
<partial name="_StatusMessage" model="@TempData["StatusMessage"]" />
<div class="container-fluid">
    <div class="row ">
        <form asp-action="EditUserInfo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group box-shadow visually-hidden">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" readonly disabled class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group box-shadow ">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required/>
                <span asp-validation-for="Email" readonly class="text-danger"></span>
            </div>
            <div class="form-group box-shadow">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" required />
                <span asp-validation-for="FirstName" readonly class="text-danger"></span>
            </div>
            <div class="form-group box-shadow">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" required />
                <span asp-validation-for="LastName" readonly class="text-danger"></span>
            </div>
            <div class="form-group box-shadow ">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" readonly class="text-danger"></span>
            </div>
            <div class="form-group box-shadow ">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" readonly class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group box-shadow col-md-6 mt-md-2">
                    <input type="submit" value="Update user info" class="btn btn-primary w-100" />
                </div>
                <div class="form-group box-shadow col-md-3 mt-md-2">
                    <a asp-action="DetailUserRole" asp-route-email=@Model.Email class="btn btn-secondary w-100">Back to Detail</a>
                </div>
                @if (Model.ListRoleName != null && (Model.ListRoleName.Contains("Admin") || Model.ListRoleName.Contains("Editor")))
                {
                    <div class="form-group box-shadow col-md-3 mt-md-2">
                        <a asp-action="ListEmployeeRole" class="btn btn-secondary w-100">Back to List</a>
                    </div>
                }
                else
                {
                    <div class="form-group box-shadow col-md-3 mt-md-2">
                        <a asp-action="ListUserRole" class="btn btn-secondary w-100">Back to List</a>
                    </div>
                }
            </div>
            
        </form>
    </div>
</div>

@TempData["msg"]
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
