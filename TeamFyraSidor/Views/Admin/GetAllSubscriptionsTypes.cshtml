@model IEnumerable<TeamFyraSidor.Data.SubscriptionType>

@{
    ViewData["Title"] = "All Subscription Types";
}

<h1>All Subscription Types</h1>

<h4 class="mt-4">
    <a class="btn btn-success" asp-action="CreateSubscriptionType">Create New</a>
</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="UpdateSubscriptionType" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> 
                <a asp-action="GetSubscriptionType" asp-route-id="@item.Id" class="btn btn-info">Details</a> 
                <a asp-action="DeleteSubscriptionType" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
