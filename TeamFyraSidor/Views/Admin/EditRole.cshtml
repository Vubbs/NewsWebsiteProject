@model TeamFyraSidor.Models.VM.EditRoleVM

@{
    ViewData["Title"] = "Edit Role";
}

<h1 class="striped-background">Edit Role</h1>

<br />
<partial name="_StatusMessage" model="@TempData["StatusMessage"]" />
<div class="container-fluid">
    <div class="row ">
        <form id="EditRole" asp-action="EditRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group box-shadow">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" readonly class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group box-shadow">
                <label asp-for="Name" name="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group box-shadow col-md-6 mt-md-2">
                    <input type="submit" value="Update" class="btn btn-primary w-100" />
                </div>

                <div class="form-group box-shadow col-md-6 mt-md-2">
                    <a asp-action="ListRoleName" class="btn btn-secondary w-100">Back to List</a>
                </div>
            </div>
            
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
