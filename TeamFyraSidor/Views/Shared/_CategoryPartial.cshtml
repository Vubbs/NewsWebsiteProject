<div class="row">
    <div class="col-md-12 mb-5" id="top">
        <partial name="_CardImageLeftPartial" model="@Model.TopArticle" />
    </div>

    <h3 class="text-danger mb-3">POPULAR ARTICLES</h3>
    <hr />
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        @foreach (var article in Model.Pop3Articles)
        {
            <partial name="_CardImageTopPartial" model="@article" />
        }
    </div>
    <h3 class="text-danger mb-3">LATEST NEWS</h3>
    <hr />
    <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
        @foreach (var article in Model.LatestArticles)
        {
            <div class="col-lg-3 col-md-6 d-flex align-items-stretch">

                <partial name="_CardImageTopPartial" model="@article" />

            </div>
            
        }
    </div>
</div>