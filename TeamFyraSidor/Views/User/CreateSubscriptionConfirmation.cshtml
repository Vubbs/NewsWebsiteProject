@model TeamFyraSidor.Data.Subscription

@{
    ViewData["Title"] = "CreateSubscriptionConfirmation";
}



<div>
    <h4>Subscription</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.FirstName):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Subscription:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubscriptionType.TypeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Expires):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Expires)
        </dd>
        <dt class = "col-sm-2">
            Payment Complete:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentComplete)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="UpdateSubscription" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> 
    <a asp-action="Index" asp-controller="Home" class="btn btn-info">Home</a>
</div>
