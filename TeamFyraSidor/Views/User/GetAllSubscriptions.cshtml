@model IEnumerable<TeamFyraSidor.Data.Subscription>

@{
    ViewData["Title"] = "GetAllSubscriptions";
}

<h1>All Subscriptions</h1>

<h4 class="mt-4">
    <a class="btn btn-success" asp-action="CreateSubscription">Create New</a>
</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubscriptionType.TypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expires)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentComplete)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubscriptionType.TypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expires)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentComplete)
            </td>
            <td>
                <a asp-action="UpdateSubscription" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> 
                    <a asp-action="GetSubscription" asp-route-id="@item.Id" class="btn btn-info">Details</a> 
                    <a asp-action="DeleteSubscription" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
