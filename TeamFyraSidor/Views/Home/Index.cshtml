@model TeamFyraSidor.Models.ViewModels.HomePageVM
@{
    ViewData["Title"] = "Fyra Sidor";
}

<div class="container-fluid mb-5">
    <div class="section1">
        <div class="row gy-4">

            <h4 class="mt-5 text-danger">LATEST NEWS</h4>
            <hr />
            <div class="col-lg-3 col-md-6 rounded-2">

                <div class="p-1 rounded-2">

                    @foreach (var article in Model.Latest.Take(5))
                    {
                        <partial name="_CardImageTopPartial" model="article" />
                    }
                </div>

            </div>
            <div class="col-lg-6 col-md-6 rounded-2">

                @foreach (var article in Model.Latest.Skip(5).Take(4))
                {
                    <partial name="_CardImageTopPartial" model="article" />
                }
            </div>

            <div class="col-lg-3 rounded-2">

                <div class="row gy-4 gx-4">

                    <div class="col-lg-12 col-sm-6">
                        <div class="card bg-image card shadow-1-strong"
                             style="background-image: url('https://images.pexels.com/photos/2449543/pexels-photo-2449543.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');">
                            <div class="card-body">
                                <vc:weather city="LinkÃ¶ping"></vc:weather>
                            </div>
                            <div class="card-footer">
                                Data from OpenWeatherMap
                            </div>
                        </div>
                    </div>

                    <div class="card col-lg-12 col-sm-6">
                        <div class="card-body">
                            <cache expires-after="TimeSpan.FromMinutes(60)">
                                <vc:stock symbol="AAPL"></vc:stock>
                            </cache>
                        </div>
                        <div class="card-footer">
                            <small>Stock data provided by Alpha Vantage</small>
                        </div>
                    </div>

                    <div class="col-lg-12 col-md-12" id="ElPrice">
                        <vc:el-price></vc:el-price>
                    </div>

                </div>

                <div class="mt-3">
                    <h4 class="text-danger">MORE LATEST NEWS</h4>
                    <hr />
                    <vc:latest-news-view></vc:latest-news-view>
                </div>

            </div>

        </div>
    </div>
    <hr />
    <div class="card mb-3 text-center" style="max-width: 100%; height= auto;">
        <h6>ADVERTISEMENT</h6>
        <div class="row g-0">
            <div class="col-md-8">
                <a href="https://www.english.metro.tokyo.lg.jp/" target="_blank" class="btn text-white btn-dark mx-2" aria-label="Advertisement">
                    <img src="https://tpc.googlesyndication.com/simgad/9815006595481215279" class="img-fluid rounded-start justify-content-center" alt="Avertisement">
                </a>

            </div>

        </div>
    </div>
    <hr />

    <div class="section2">
        <div class="row gy-4 justify-content-center">
            <div class="col-lg-3">
                @foreach (var article in Model.Latest.Skip(11).Take(3))
                {
