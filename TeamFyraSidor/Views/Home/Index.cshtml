                    </div>

                    <div class="row row-cols-1 row-cols-md-3">

                        @foreach (var article in Model.Latest.Skip(16).Take(3))
                        {
                            <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                                <partial name="_CardImageTopPartial" model="article" />
                            </div>

                        }

                    </div>

                </div>


            </div>
        </div>


    </div>


